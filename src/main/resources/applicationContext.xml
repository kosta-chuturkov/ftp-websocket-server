<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <import resource="classpath:/persistence/hibernate-ApplicationContext.xml" />
    <import resource="classpath:/persistence/dao-ApplicationContext.xml" />
    <import resource="classpath:/service/service-ApplicationContext.xml" />
    <import resource="classpath:/http/http-session-ApplicationContext.xml" />

</beans>
