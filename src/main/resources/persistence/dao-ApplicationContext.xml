<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractRepository" abstract="true">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="userRepository"
          class="ftp.core.persistance.hibernate.repository.UserHibernateRepository"
          parent="abstractRepository"/>

    <bean id="fileRepository"
          class="ftp.core.persistance.hibernate.repository.FileHibernateRepository"
          parent="abstractRepository"/>

    <bean id="authorityRepository"
          class="ftp.core.persistance.hibernate.repository.AuthorityHibernateRepository"
          parent="abstractRepository"/>


</beans>
